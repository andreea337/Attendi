<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcdddd"
    tools:context=".attendi_mode">

    <ImageView
        android:id="@+id/method_background"
        android:layout_width="340dp"
        android:layout_height="590dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/method_background" />

    <ImageButton
        android:id="@+id/btn_ball"
        android:layout_width="110dp"
        android:layout_height="140dp"
        android:scaleType="centerInside"
        android:background="#00000000"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="520dp"
        app:layout_constraintBottom_toBottomOf="@+id/method_background"
        app:layout_constraintEnd_toEndOf="@+id/method_background"
        app:layout_constraintStart_toStartOf="@+id/method_background"
        app:layout_constraintTop_toTopOf="@+id/method_background"
        app:srcCompat="@drawable/method_1" />

    <ImageButton
        android:id="@+id/btn_random"
        android:layout_width="110dp"
        android:layout_height="140dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        android:layout_marginRight="235dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/method_background"
        app:layout_constraintEnd_toEndOf="@+id/method_background"
        app:layout_constraintStart_toStartOf="@+id/method_background"
        app:layout_constraintTop_toTopOf="@+id/method_background"
        app:srcCompat="@drawable/method_2" />

    <ImageButton
        android:id="@+id/btn_normal"
        android:layout_width="110dp"
        android:layout_height="140dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="180dp"
        app:layout_constraintBottom_toBottomOf="@+id/method_background"
        app:layout_constraintEnd_toEndOf="@+id/method_background"
        app:layout_constraintStart_toStartOf="@+id/method_background"
        app:layout_constraintTop_toTopOf="@+id/method_background"
        app:srcCompat="@drawable/method_3" />



</androidx.constraintlayout.widget.ConstraintLayout>