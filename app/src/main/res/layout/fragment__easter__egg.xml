<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_Easter_Egg">

    <ImageButton
        android:id="@+id/light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/light_off"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:background="#00000000"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/theme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/light"
        app:srcCompat="@drawable/student_login_easteregg_background"
        android:layout_width="400dp"
        android:layout_height="550dp"
        android:layout_marginTop="1dp" />

    <ImageView
        android:id="@+id/imageView1"
        app:layout_constraintBottom_toBottomOf="@+id/theme"
        app:layout_constraintEnd_toEndOf="@+id/theme"
        app:layout_constraintStart_toStartOf="@+id/theme"
        app:layout_constraintTop_toBottomOf="@+id/light"
        app:srcCompat="@drawable/easteregg_image1"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginRight="280dp"
        android:layout_marginBottom="520dp" />

    <ImageView
        android:id="@+id/imageView2"
        app:layout_constraintBottom_toBottomOf="@+id/theme"
        app:layout_constraintEnd_toEndOf="@+id/theme"
        app:layout_constraintStart_toStartOf="@+id/theme"
        app:layout_constraintTop_toBottomOf="@+id/light"
        app:srcCompat="@drawable/easteregg_image2"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginRight="200dp"
        android:layout_marginBottom="400dp" />

    <ImageView
        android:id="@+id/imageView3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/theme"
        app:layout_constraintStart_toStartOf="@+id/theme"
        app:layout_constraintTop_toBottomOf="@+id/light"
        app:srcCompat="@drawable/easteregg_image3"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginBottom="270dp" />

    <ImageView
        android:id="@+id/imageView4"
        app:layout_constraintBottom_toBottomOf="@+id/theme"
        app:layout_constraintEnd_toEndOf="@+id/theme"
        app:layout_constraintStart_toStartOf="@+id/theme"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:srcCompat="@drawable/easteregg_image4"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginRight="255dp"
        android:layout_marginBottom="200dp" />

    <ImageView
        android:id="@+id/imageView5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/theme"
        app:layout_constraintStart_toStartOf="@+id/theme"
        app:layout_constraintTop_toBottomOf="@+id/light"
        app:srcCompat="@drawable/easteregg_image5"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="110dp" />

    <ImageView
        android:id="@+id/imageView6"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:srcCompat="@drawable/easteregg_image6"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="80dp" />

    <ImageView
        android:id="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:srcCompat="@drawable/easteregg_image7"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="80dp" />

</androidx.constraintlayout.widget.ConstraintLayout>