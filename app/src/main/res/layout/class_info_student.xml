<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0a0e26"
    tools:context=".class_info_student">

    <ImageView
        android:id="@+id/class_info_image"
        android:layout_width="394dp"
        android:layout_height="290dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="510dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/class_info_image_monday" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RCview2"
        android:layout_width="375dp"
        android:layout_height="430dp"
        android:layout_marginHorizontal="20dp"
        android:layout_margin="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/class_info_image" />

</androidx.constraintlayout.widget.ConstraintLayout>